{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",

  "WcConfiguration": {
    "uploadSize": 6,
    "countryDetailsProvider": "https://restcountries.com/v3.1/alpha?codes="
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=RTE-W11\\SQLEXPRESS;Database=WhichCountry;Integrated Security=True;TrustServerCertificate=True"
  },

  "AppSettings": {
    "Secret": "MYSECRETKEY_MYSECRETKEY_MYSECRETKEY_MYSECRETKEY_MYSECRETKEY_MYSECRETKEY",
    //"TokenExpiration": 60000 //1min
    "TokenExpiration": 3600000 //1hour
  }
}
