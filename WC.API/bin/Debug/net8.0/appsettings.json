{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",

  "Configuration": {
    "UploadSize": 5
  },

  "CountryDetailsProvider": {
    "Url": "https://restcountries.com/v3.1/alpha?codes="
  },

  "Images": {
    "ImagePath": "C:\\Users\\rte\\Desktop\\WC.Data\\Images\\Flags",
    "ImageExtensionType": ".png"
  },

  "TokenSettings": {
    "Secret": "MYSECRETKEY_MYSECRETKEY_MYSECRETKEY_MYSECRETKEY_MYSECRETKEY_MYSECRETKEY",
    "TokenExpiration": 365 //1 year
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=RTE-W11\\SQLEXPRESS;Database=WhichCountry;Integrated Security=True;TrustServerCertificate=True"
  }
}
